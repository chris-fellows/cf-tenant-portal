@model CFTenantPortal.Models.PropertyGroupListVM

<p>
    <a asp-action="PropertyGroup">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PropertyGroups[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyGroups[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyGroups[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PropertyGroups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Details", "PropertyGroup", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
